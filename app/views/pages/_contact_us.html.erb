<div class="px-md-3 px-lg-70 px-xl-78 py-64 mt-5" id="contact">
  <div class="d-flex flex-column gap-2 text-center">
    <span class="text-red-gray fs-20 fw-semibold">Contact Me</span>
    <h1>I Want to Hear From You</h1>
    <span class="text-gray-700 fs-20">Please fill out the form in this section to contact with me.</span>
  </div>
  <div class="d-flex flex-column flex-lg-row justify-content-between align-items-start align-items-lg-center mt-50 gap-5 gap-lg-8">
    <div class="d-flex flex-column gap-4  mx-3 mx-lg-0">
      <div class="d-flex gap-4 align-items-center">
        <i class="fa-solid fa-location-dot fs-20 text-red-gray rounded-circle d-flex align-items-center justify-content-center" style="background-color:#fedfd7; width: 70px; height: 70px;"></i>
        <div class="d-flex flex-column">
          <span class="fw-semibold fs-28">Address</span>
          <span class="fs-18 text-gray-700">Somewhere in word</span>
        </div>
      </div>
      <div class="d-flex gap-4 align-items-center">
        <i class="fa-solid fa-envelope fs-20 text-green rounded-circle d-flex align-items-center justify-content-center" style="background-color:#ddf5e6; width: 70px; height: 70px;"></i>
        <div class="d-flex flex-column">
          <span class="fw-semibold fs-28">Email</span>
          <span class="fs-18 text-gray-700">hello@gmail.com</span>
        </div>
      </div>
      <div class="d-flex gap-4 align-items-center">
        <i class="fa-solid fa-phone fs-20 text-purple rounded-circle d-flex align-items-center justify-content-center" style="background-color:#ece8f8; width: 70px; height: 70px;"></i>
        <div class="d-flex flex-column">
          <span class="fw-semibold fs-28">Phone</span>
          <span class="fs-18 text-gray-700">+123 456 789</span>
        </div>
      </div>
    </div>
    <div style="max-width: 700px;" class="mx-3 mx-lg-0">
      <form action="<%= messages_path %>" class="d-flex flex-wrap gap-3" method="POST" for="message">
        <input class="form-control px-4 py-3 rounded-3" type="text" name="name" id="" placeholder="Your Name" style="max-width: 300px;">
        <input class="form-control   px-4 py-3 rounded-3" type="email" name="email" id="" placeholder="Your Email" style="max-width: 300px;" required="required">
        <input class="form-control   px-4 py-3 rounded-3" type="number" name="phone" id="" placeholder="Your Phone" style="max-width: 300px;">
        <input class="form-control   px-4 py-3 rounded-3" type="text" name="subject" id="" placeholder="Your Subject" style="max-width: 300px;" required="required">
        <textarea class="form-control  px-4 py-3 rounded-3" type="text" name="text" id="" placeholder="" style="max-width: 618px; height: 200px;" required="required">
        </textarea>
        <button class="btn btn-red-gray py-3 px-6 rounded-5 text-white fw-semibold">Submit Now</button>
      </form>
    </div>
  </div>
  <!-- contact-me end -->
</div>
